'use strict';

const logger = require('.');

describe('Logger middleware', () => {
  let consoleSpy;
  let req = {};
  let res = {};
  let next = jest.fn();

  beforeAll(() => {
    consoleSpy.mockRestore();
  });

  test('logs as expected', () => {
    logger(req, res, next);

    expect(consoleSpy).toHaveBeenCalledWith('logger middleware hit!');
  });
});
